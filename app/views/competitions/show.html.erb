<h1><%= @competition.name %></h1>
<section id="competition-properties">
  <p>Name: <%= @competition.name %></p>
  <p>Location: <%= @competition.location %></p>
  <p>Sport: <%= @competition.sport %></p>
</section>

<ul id="teams">
  <% @competition.teams.each do |team| %>
    <li id="team-<%= team.id %>">
      <p><%= team.nickname %></p>
      <p><%= team.hometown %></p>
    </li>
  <% end %>
</section>

<p id="registration-link"><%= link_to "Register a team", new_competition_team_path(@competition.id) %></p>

<p id="avg-age"><%= @competition.players.average_age %></p>
